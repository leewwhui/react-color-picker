{
  "name": "react-color-picker-tool",
  "private": false,
  "version": "0.0.2",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "esmodule": "dist/index.esmodule.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "umd": "./dist/index.umd.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.module.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "del-cli 'dist/*' && microbundle build --entry src/index.ts --jsx React.createElement --name react-color-picker-tool --css inline --tsconfig tsconfig.build.json",
    "preview": "vite preview"
  },
  "keywords": [
    "react",
    "color picker"
  ],
  "dependencies": {
    "@emotion/css": "^11.10.0",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/tinycolor2": "^1.4.3",
    "@vitejs/plugin-react": "^2.1.0",
    "del-cli": "^5.0.0",
    "microbundle": "^0.15.1",
    "rollup-plugin-typescript2": "^0.34.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.5.0"
  }
}
